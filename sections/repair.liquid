<article
  id="repair-inquiry-{{ section.id }}" 
  class="
    repair-inquiry
    {{ section.settings.bg_color }} 
    {{ section.settings.bg_gradient }}
    {{ section.settings.text_color }}
    {{ section.settings.border_top_width | prepend: 'border-top-' }}
    {{ section.settings.border_bottom_width | prepend: 'border-bottom-' }}
    {{ section.settings.border_color }} 
    {{ section.settings.pt | prepend: 'pt-' }} 
    {{ section.settings.pb | prepend: 'pb-' }}
  "
  style="
    --bs-bg-opacity: {{ section.settings.bg_opacity | append: '%' }};
    --bs-border-opacity: {{ section.settings.border_opacity | append: '%' }};
    margin: auto;
  ">
  <section id="inquiry-form" class="py-5 bg-light">
    <div class="container" style="max-width: 600px;">
      <h2 class="text-center">Request a Repair Quote</h2>
      <form>
        <div class="mb-3">
          <label for="name" class="form-label">Full Name</label>
          <input type="text" class="form-control" id="name" name="name" placeholder="Enter your full name" required>
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email address" required>
        </div>
        <div class="mb-3">
          <label for="equipment" class="form-label">Equipment Type/Model</label>
          <input type="text" class="form-control" id="equipment" name="equipment" placeholder="Enter equipment type or model" required>
        </div>
        <div class="mb-3">
          <label for="issue" class="form-label">Description of the Issue</label>
          <textarea class="form-control" id="issue" name="issue" placeholder="Describe the issue with your equipment" rows="4" required></textarea>
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">Upload Photos (optional)</label>
          <input type="file" class="form-control" id="image" name="image" accept="image/*">
        </div>
        <div class="text-center">
          <button type="submit" class="btn btn-primary">Submit Inquiry</button>
        </div>
      </form>
    </div>
  </section>
</article>

{% schema %}
{
  "name": "Repair Inquiry",
  "settings": [
    {
      "type": "header",
      "content": "Styling"
    },
    {
      "type": "select",
      "id": "bg_color",
      "label": "Background color",
      "default": "bg-body",
      "options": [
        { "value": "bg-primary", "label": "Primary" },
        { "value": "bg-secondary", "label": "Secondary" },
        { "value": "bg-body", "label": "Body" },
        { "value": "bg-white", "label": "White" }
      ]
    },
    {
      "type": "range",
      "id": "bg_opacity",
      "label": "Background opacity",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 100,
      "unit": "%"
    },
    {
      "type": "select",
      "id": "bg_gradient",
      "label": "Background gradient",
      "options": [
        { "value": "bg-gradient", "label": "Yes" },
        { "value": "", "label": "No" }
      ],
      "default": ""
    },
    {
      "type": "select",
      "id": "text_color",
      "label": "Text color",
      "default": "text-body",
      "options": [
        { "value": "text-primary", "label": "Primary" },
        { "value": "text-secondary", "label": "Secondary" },
        { "value": "text-body", "label": "Body" },
        { "value": "text-white", "label": "White" }
      ]
    },
    {
      "type": "text",
      "id": "container_max_width",
      "label": "Container max-width (px)"
    },
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "Show page title",
      "default": true
    },
    {
      "type": "select",
      "id": "title_font_size",
      "label": "Title font-size",
      "default": "h1",
      "options": [
        { "value": "h1", "label": "H1" },
        { "value": "h2", "label": "H2" },
        { "value": "h3", "label": "H3" }
      ]
    },
    {
      "type": "richtext",
      "id": "rich_text_box",
      "label": "Rich Text Box",
      "default": "<p>List your services here...</p>"
    },
    {
      "type": "range",
      "id": "pt",
      "label": "Top padding",
      "default": 10,
      "min": 0,
      "max": 20,
      "step": 1
    },
    {
      "type": "range",
      "id": "pb",
      "label": "Bottom padding",
      "default": 10,
      "min": 0,
      "max": 20,
      "step": 1
    }
  ],
  "presets": [
    {
      "name": "Repair Inquiry"
    }
  ]
}
{% endschema %}

