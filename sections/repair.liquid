<article
  id="repair-inquiry-{{ section.id }}" 
  class="
    repair-inquiry
    {{ section.settings.bg_color }} 
    {{ section.settings.bg_gradient }}
    {{ section.settings.text_color }}
    {{ section.settings.border_top_width | prepend: 'border-top-' }}
    {{ section.settings.border_bottom_width | prepend: 'border-bottom-' }}
    {{ section.settings.border_color }} 
    {{ section.settings.pt | prepend: 'pt-' }} 
    {{ section.settings.pb | prepend: 'pb-' }}
  "
  style="
    --bs-bg-opacity: {{ section.settings.bg_opacity | append: '%' }};
    --bs-border-opacity: {{ section.settings.border_opacity | append: '%' }};
  ">
  <div 
    class="container" 
    style="max-width: {{ section.settings.container_max_width }}px">
    
    {% unless section.settings.show_title == blank %}
      <h1 class="title {{ section.settings.title_font_size }} text-center">
        {{ page.title }}
      </h1>
    {% endunless %}

    <div class="text-center py-3">
      <p>Specializing in Greenlee 555 Bending Machines and More</p>
      <a href="#inquiry-form" class="btn btn-primary mt-3">Request a Repair Quote</a>
    </div>

    <section class="py-5">
      <h2 class="text-center">Why Choose Us?</h2>
      <p class="text-center">
        With years of experience and ample parts in stock, we specialize in repairing Greenlee 555 bending machines and other industrial equipment. Our skilled technicians ensure a quick turnaround and reliable service.
      </p>
    </section>

    <section class="py-5">
      <h2 class="text-center">Our Services</h2>
      <div class="row text-center">
        <div class="col-md-4">
          <p><strong>Greenlee 555 Bending Machine Repairs</strong></p>
        </div>
        <div class="col-md-4">
          <p><strong>Motor Replacements and Calibration</strong></p>
        </div>
        <div class="col-md-4">
          <p><strong>Routine Maintenance for Industrial Tools</strong></p>
        </div>
      </div>
    </section>

    <section id="inquiry-form" class="py-5 bg-light">
      <h2 class="text-center">Request a Repair Quote</h2>
      <form class="mx-auto" style="max-width: 600px;">
        <div class="mb-3">
          <label for="name" class="form-label">Full Name</label>
          <input type="text" class="form-control" id="name" name="name" placeholder="Enter your full name" required>
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email address" required>
        </div>
        <div class="mb-3">
          <label for="equipment" class="form-label">Equipment Type/Model</label>
          <input type="text" class="form-control" id="equipment" name="equipment" placeholder="Enter equipment type or model" required>
        </div>
        <div class="mb-3">
          <label for="issue" class="form-label">Description of the Issue</label>
          <textarea class="form-control" id="issue" name="issue" placeholder="Describe the issue with your equipment" rows="4" required></textarea>
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">Upload Photos (optional)</label>
          <input type="file" class="form-control" id="image" name="image" accept="image/*">
        </div>
        <div class="text-center">
          <button type="submit" class="btn btn-primary">Submit Inquiry</button>
        </div>
      </form>
    </section>

    <section class="py-5">
      <h2 class="text-center">Client Testimonials</h2>
      <div class="row">
        <div class="col-md-6">
          <blockquote class="blockquote">
            <p>"Fast and professional service! They fixed my Greenlee 555 in no time."</p>
            <footer class="blockquote-footer">Happy Customer</footer>
          </blockquote>
        </div>
        <div class="col-md-6">
          <blockquote class="blockquote">
            <p>"Great experience! Highly recommend their repair services."</p>
            <footer class="blockquote-footer">Satisfied Client</footer>
          </blockquote>
        </div>
      </div>
    </section>
  </div>
</article>

{% schema %}
{
  "name": "Repair Inquiry",
  "settings": [
    {
      "type": "header",
      "content": "Styling"
    },
    {
      "type": "select",
      "id": "bg_color",
      "label": "Background color",
      "default": "bg-body",
      "options": [
        { "value": "bg-primary", "label": "Primary" },
        { "value": "bg-secondary", "label": "Secondary" },
        { "value": "bg-body", "label": "Body" },
        { "value": "bg-white", "label": "White" }
      ]
    },
    {
      "type": "range",
      "id": "bg_opacity",
      "label": "Background opacity",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 100,
      "unit": "%"
    },
    {
      "type": "select",
      "id": "bg_gradient",
      "label": "Background gradient",
      "options": [
        { "value": "bg-gradient", "label": "Yes" },
        { "value": "", "label": "No" }
      ],
      "default": ""
    },
    {
      "type": "select",
      "id": "text_color",
      "label": "Text color",
      "default": "text-body",
      "options": [
        { "value": "text-primary", "label": "Primary" },
        { "value": "text-secondary", "label": "Secondary" },
        { "value": "text-body", "label": "Body" },
        { "value": "text-white", "label": "White" }
      ]
    },
    {
      "type": "text",
      "id": "container_max_width",
      "label": "Container max-width (px)"
    },
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "Show page title",
      "default": true
    },
    {
      "type": "select",
      "id": "title_font_size",
      "label": "Title font-size",
      "default": "h1",
      "options": [
        { "value": "h1", "label": "H1" },
        { "value": "h2", "label": "H2" },
        { "value": "h3", "label": "H3" }
      ]
    },
    {
      "type": "range",
      "id": "pt",
      "label": "Top padding",
      "default": 10,
      "min": 0,
      "max": 20,
      "step": 1
    },
    {
      "type": "range",
      "id": "pb",
      "label": "Bottom padding",
      "default": 10,
      "min": 0,
      "max": 20,
      "step": 1
    }
  ],
  "presets": [
    {
      "name": "Repair Inquiry"
    }
  ]
}
{% endschema %}
