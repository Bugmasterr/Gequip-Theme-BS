<style>
  .card-product {
    margin: auto;
    border-radius: 6px;
    width: 300px;
    height:520px;
    border: none;
    overflow: hidden;
    position: relative;
  }

  .card-product-info {
    text-align: left;
    font-size: 12pt;
    padding: 10px;
    margin: 0;
    line-height: normal;
  }

  .card-product-image-container {
    height: 175px;
    width: 200px;
    margin: auto;
    border-radius: 12px;
    overflow: hidden;
    padding: 5px;
  }

  .card-product-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .btn-add-to-cart {
    color: #fff;
    border-radius: 0;
    width: 95%;
  }

  .badge-featured {
    position: absolute;
    top: 5px;
    left: 5px;
    padding: 5px 7px;
    font-size: 12px;
  }

  @media (max-width: 768px) {
    .card-product {
      aspect-ratio: 2 / 3;
      width: 95%;
      height: auto;
      margin: auto;
    }

    .card-product-image-container {
      height: 150px;
      width: 200px;
      margin: auto;
      padding: 0;
    }

    .card-product-info {
      padding-top: 1rem;
    }
  }

  .product-details {
    display: -webkit-box;
    line-clamp: 3;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    margin: 0.3rem 0;
  }

</style>

<div class="card shadow-sm card-product p-3 position-relative">
  <span class="badge bg-danger badge-featured">Featured</span>
  <div class="row g-0 h-100">
    <!-- Product Image -->
    <div class="col-md-5">
      <div class="card-product-image-container">
        <img src="https://www.gequip.com/cdn/shop/files/ridigid-141-geared-threader-04.png" alt="Product Image" class="card-product-image">
      </div>
    </div>
    <!-- Product Info -->
    <div class="col-md card-product-info">
      <div>
        <h6 class="fw-bold mb-1 product-name">Greenlee 555C</h6>
        <p class="text-muted small mb-1 product-details">Greenlee 555C Classic Electric Bender for 1/2in. to 2in. Conduit - Reconditioned</p>
        <p class="mb-0 product-price text-primary">{% render 'product-rating-badge', product: product %}</p>
        <p class="text-success small mb-1 product-details"><i class="bi bi-check-circle"></i> In Stock</p>
        <p class="small mb-1 product-details"><i class="bi bi-tools"></i> Reconditioned</p>
        <p class="small mb-1 product-details"><i class="bi bi-truck"></i> Freight</p>
        <p class="small mb-2 product-details"><i class="bi bi-clock"></i> 3 - 5 Business Days</p>
        <h5 class="text-primary mt-2 mb-1 fw-bolder product-price" style="padding-top: .75rem; font-size: 20pt;">$2,995.00</h5>
      </div>
    </div>
  </div>
  <p class="small mb-2 product-details">
          <del class="text-danger">$4,995.00</del> 
          <span class="badge bg-success text-white fw-light py-2 px-3 badge-save">Save $2,000!</span>
        </p>
  <!-- Add to Cart Button -->
  <button class="btn bg-primary btn-primary m-auto mb-2 rounded btn-add-to-cart">
    <i class="bi bi-cart-fill"></i> Add to Cart
  </button>
</div>
<!-- Add icons CDN for Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

