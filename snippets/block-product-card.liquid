{%- liquid
  assign current_variant = product.selected_or_first_available_variant
  assign featured_media = product.featured_media
  assign is_available = product.selected_or_first_available_variant.available | default: false
  assign on_sale = false
  assign savings = 0
  if current_variant.compare_at_price and current_variant.price and current_variant.compare_at_price > current_variant.price
    assign on_sale = true
    assign savings = current_variant.compare_at_price | minus: current_variant.price
  endif
-%}
<style>
.rec-product-card {
  border-radius: .3rem;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  transition: box-shadow 0.15s, transform 0.15s;
  font-size: 0.9rem;
  margin: 0;
  margin-bottom: 1rem;
  padding: 0;
  position: relative;
}
.rec-product-card:hover {
  transform: translateY(-1px) scale(1.01);
}
.rec-product-card__link {
  display: flex;
  flex-direction: column;
  color: inherit;
  text-decoration: none;
  height: 100%;
  position: relative;
}
.rec-product-card__media {
  width: 100%;
  height: 100%;
  border-radius: .3rem;
  position: relative;
  overflow: hidden;
}
.rec-product-card__image,
.rec-product-card__placeholder {
  object-fit:contain;
  background: #ddd;
  object-position: center;
  border-radius: .3rem;
  aspect-ratio: 1;
  width: 100%;
  height: auto;
  display: block;
  transition: filter 0.15s;
}
.rec-product-card__placeholder {
  opacity: 0.22;
}
.rec-product-card--soldout .rec-product-card__image,
.rec-product-card--soldout .rec-product-card__placeholder {
  filter: grayscale(1) brightness(0.95) opacity(0.6);
  pointer-events: none;
}
.rec-product-card--soldout::after {
  content: 'Out of Stock';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(0,0,0,0.5);
  color: #fff;
  font-size: 0.8rem;
  font-weight: 700;
  text-wrap: nowrap;
  padding: 0.22em 0.85em;
  border-radius: .3rem;
  z-index: 2;
  box-shadow: 0 2px 6px rgba(0,0,0,0.07);
  pointer-events: none;
  letter-spacing: 0.04em;
  text-transform: uppercase;
}
.rec-product-card__content {
  flex: 1 1 auto;
  display: flex;
  flex-direction: column;
  min-width: 0;
}
.rec-product-card__title {
  font-size: .8rem !important;
  font-weight: 400;
  margin: 0;
  line-height: 1.2;
  min-height: 3.5em;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
  transition: color 0.12s;
  word-break: break-word;
}
.rec-product-card__link:hover .rec-product-card__title {
  color: #334fb4;
  text-decoration: underline;
}
.rec-product-card__price {
  align-items: baseline;
  gap: 0.3em;
  font-size: 0.75rem !important;
  margin-top: .25rem;
  margin-bottom: 0;
}
.rec-product-card__price-current {
  color: #334fb4;
  font-weight: 700;
  font-size: 1rem !important;
}
.rec-product-card__price-sale {
  color: #334fb4;
}
.rec-product-card__price-compare {
  color: #dc3545;
  font-size: 1em !important;
  text-decoration: line-through;
  margin-left: 0.18em;
  font-weight: 600;
  position: relative;
}
.rec-product-card__price-savings {
  color: white;
  background: #198754;
  font-size: 1em;
  font-weight: 400;
  padding: .2em .5em;
  border-radius: .3rem;
  white-space: nowrap;
  vertical-align: middle;
  width: fit-content;
}
.rec-product-card__sku {
  color: #666;
  font-size: 0.75rem !important;
  letter-spacing: 0.03em;
  display: inline-block;
  margin-top: 1em;
}
</style>
<div class="rec-product-card{% if is_available == false %} rec-product-card--soldout{% endif %}">
  <a href="{{ product.url }}" class="rec-product-card__link" {% unless is_available %}tabindex="-1" aria-disabled="true"{% endunless %}>
    <div class="rec-product-card__media">
      {% if featured_media %}
        {{ featured_media | image_url: width: 180 | image_tag:
          loading: 'lazy',
          width: 180,
          height: 180,
          class: 'rec-product-card__image',
          alt: featured_media.alt | escape
        }}
      {% else %}
        {{ 'product-1' | placeholder_svg_tag: 'rec-product-card__image rec-product-card__placeholder' }}
      {% endif %}
    </div>
    <div class="rec-product-card__content">
      {% if current_variant.sku != blank %}
        <div class="rec-product-card__sku">{{ current_variant.sku }}</div>
      {% endif %}
      <h3 class="rec-product-card__title">{{ product.title | escape }}</h3>
      <div class="rec-product-card__price">
        <div class="rec-product-card__price-current{% if on_sale %} rec-product-card__price-sale{% endif %}">
          {{ current_variant.price | money }}
        </div>
        {% if on_sale %}
          <span class="rec-product-card__price-compare">
            {{ current_variant.compare_at_price | money }}
          </span>
          <span class="rec-product-card__price-savings">
            Save {{ savings | money_without_trailing_zeros }}
          </span>
        {% endif %}
      </div>
    </div>
  </a>
</div>
