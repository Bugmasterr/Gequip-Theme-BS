{% comment %}
  Product Description with Tabs
  Includes: Description and Reviews tabs with Loox integration
{% endcomment %}

<div class="product-description mt-5">
  <div class="row justify-content-center">
    <div class="">
      <!-- Tab Navigation -->
      <ul class="nav nav-tabs border-0 mb-4" role="tablist">
        <li class="nav-item" role="presentation">
          <button 
            class="nav-link active fw-medium" 
            id="description-tab" 
            data-bs-toggle="tab" 
            data-bs-target="#description-content" 
            type="button" 
            role="tab" 
            aria-controls="description" 
            aria-selected="true">
            <i class="bi bi-card-text me-2"></i>Product Description
          </button>
        </li>
        <li class="nav-item" role="presentation">
          <button 
            class="nav-link fw-medium" 
            id="reviews-tab" 
            data-bs-toggle="tab" 
            data-bs-target="#reviews-content" 
            type="button" 
            role="tab" 
            aria-controls="reviews" 
            aria-selected="false">
            <i class="bi bi-star me-2"></i>Product Reviews
          </button>
        </li>
      </ul>

      <!-- Tab Content -->
      <div class="tab-content pt-3">
        <!-- Description Tab -->
        <div 
          class="tab-pane fade show active" 
          id="description-content" 
          role="tabpanel" 
          aria-labelledby="description-tab">
          <div class="rte">
            {{ product.description }}
          </div>
        </div>

        <div 
          class="tab-pane fade" 
          id="reviews-content" 
          role="tabpanel" 
          aria-labelledby="reviews-tab">
          <div id="looxReviews" data-product-id="{{ product.id }}">
            {{ product.metafields.loox.reviews }}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
