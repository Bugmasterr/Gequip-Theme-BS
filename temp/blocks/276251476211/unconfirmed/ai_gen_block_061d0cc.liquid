{% doc %}
  @prompt
    a product catalogue type view for a specific collection
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-catalogue-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-product-catalogue-header-{{ ai_gen_id }} {
    margin-bottom: 40px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-product-catalogue-title-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 16px;
    font-weight: 600;
  }

  .ai-product-catalogue-description-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    margin: 0;
  }

  .ai-product-catalogue-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    margin-bottom: 40px;
  }

  .ai-product-card-{{ ai_gen_id }} {
    background: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 1px solid {{ block.settings.card_border_color }};
  }

  .ai-product-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
  }

  .ai-product-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: 1;
    overflow: hidden;
  }

  .ai-product-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-product-card-{{ ai_gen_id }}:hover .ai-product-image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-product-badge-{{ ai_gen_id }} {
    position: absolute;
    top: 12px;
    left: 12px;
    background: {{ block.settings.badge_color }};
    color: {{ block.settings.badge_text_color }};
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
  }

  .ai-product-info-{{ ai_gen_id }} {
    padding: 20px;
  }

  .ai-product-title-{{ ai_gen_id }} {
    color: {{ block.settings.product_title_color }};
    font-size: {{ block.settings.product_title_size }}px;
    font-weight: 600;
    margin: 0 0 8px;
    line-height: 1.3;
  }

  .ai-product-title-{{ ai_gen_id }} a {
    color: inherit;
    text-decoration: none;
  }

  .ai-product-title-{{ ai_gen_id }} a:hover {
    color: {{ block.settings.link_hover_color }};
  }

  .ai-product-price-{{ ai_gen_id }} {
    margin: 0 0 16px;
  }

  .ai-product-price-regular-{{ ai_gen_id }} {
    color: {{ block.settings.price_color }};
    font-size: {{ block.settings.price_size }}px;
    font-weight: 600;
  }

  .ai-product-price-compare-{{ ai_gen_id }} {
    color: {{ block.settings.compare_price_color }};
    font-size: {{ block.settings.price_size | minus: 2 }}px;
    text-decoration: line-through;
    margin-left: 8px;
  }

  .ai-product-button-{{ ai_gen_id }} {
    width: 100%;
    padding: 12px 20px;
    background: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: 14px;
    font-weight: 600;
    text-transform: uppercase;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
    text-align: center;
  }

  .ai-product-button-{{ ai_gen_id }}:hover {
    background: {{ block.settings.button_hover_color }};
    color: {{ block.settings.button_text_color }};
    transform: translateY(-2px);
  }

  .ai-product-placeholder-{{ ai_gen_id }} {
    background: #f5f5f5;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
  }

  .ai-product-placeholder-{{ ai_gen_id }} svg {
    width: 60px;
    height: 60px;
    opacity: 0.3;
  }

  .ai-view-all-button-{{ ai_gen_id }} {
    text-align: center;
    margin-top: 40px;
  }

  .ai-view-all-link-{{ ai_gen_id }} {
    display: inline-block;
    padding: 16px 32px;
    background: {{ block.settings.view_all_button_color }};
    color: {{ block.settings.view_all_button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-weight: 600;
    text-transform: uppercase;
    transition: all 0.3s ease;
  }

  .ai-view-all-link-{{ ai_gen_id }}:hover {
    background: {{ block.settings.view_all_button_hover_color }};
    color: {{ block.settings.view_all_button_text_color }};
    transform: translateY(-2px);
  }

  .ai-empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: {{ block.settings.text_color }};
  }

  .ai-empty-state-{{ ai_gen_id }} h3 {
    margin: 0 0 16px;
    font-size: 24px;
    color: {{ block.settings.heading_color }};
  }

  @media (max-width: 768px) {
    .ai-product-catalogue-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.grid_gap | divided_by: 2 }}px;
    }

    .ai-product-catalogue-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-product-info-{{ ai_gen_id }} {
      padding: 16px;
    }
  }

  @media (max-width: 480px) {
    .ai-product-catalogue-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(1, 1fr);
    }
  }
{% endstyle %}

<div class="ai-product-catalogue-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="container" style="max-width: {{ block.settings.container_width }}px;">
    {% if block.settings.heading != blank or block.settings.description != blank %}
      <div class="ai-product-catalogue-header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-product-catalogue-title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.description != blank %}
          <div class="ai-product-catalogue-description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.collection != blank %}
      {% assign collection = block.settings.collection %}
      {% assign products_to_show = block.settings.products_limit %}
      
      {% if collection.products.size > 0 %}
        <div class="ai-product-catalogue-grid-{{ ai_gen_id }}">
          {% for product in collection.products limit: products_to_show %}
            <div class="ai-product-card-{{ ai_gen_id }}">
              <div class="ai-product-image-wrapper-{{ ai_gen_id }}">
                {% if product.featured_image %}
                  <img
                    src="{{ product.featured_image | image_url: width: 400 }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    class="ai-product-image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="400"
                    height="400"
                  >
                {% else %}
                  <div class="ai-product-placeholder-{{ ai_gen_id }}">
                    {{ 'product-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}

                {% if product.compare_at_price > product.price %}
                  <div class="ai-product-badge-{{ ai_gen_id }}">
                    {% if block.settings.show_discount_percentage %}
                      {% assign discount = product.compare_at_price | minus: product.price %}
                      {% assign discount_percentage = discount | times: 100 | divided_by: product.compare_at_price %}
                      -{{ discount_percentage }}%
                    {% else %}
                      Sale
                    {% endif %}
                  </div>
                {% endif %}
              </div>

              <div class="ai-product-info-{{ ai_gen_id }}">
                <h3 class="ai-product-title-{{ ai_gen_id }}">
                  <a href="{{ product.url }}">{{ product.title }}</a>
                </h3>

                <div class="ai-product-price-{{ ai_gen_id }}">
                  <span class="ai-product-price-regular-{{ ai_gen_id }}">{{ product.price | money }}</span>
                  {% if product.compare_at_price > product.price %}
                    <span class="ai-product-price-compare-{{ ai_gen_id }}">{{ product.compare_at_price | money }}</span>
                  {% endif %}
                </div>

                {% if block.settings.show_add_to_cart %}
                  {% if product.available %}
                    <a href="{{ product.url }}" class="ai-product-button-{{ ai_gen_id }}">
                      {{ block.settings.button_text }}
                    </a>
                  {% else %}
                    <button class="ai-product-button-{{ ai_gen_id }}" disabled style="opacity: 0.6; cursor: not-allowed;">
                      Sold out
                    </button>
                  {% endif %}
                {% endif %}
              </div>
            </div>
          {% endfor %}
        </div>

        {% if block.settings.show_view_all and collection.products.size > products_to_show %}
          <div class="ai-view-all-button-{{ ai_gen_id }}">
            <a href="{{ collection.url }}" class="ai-view-all-link-{{ ai_gen_id }}">
              {{ block.settings.view_all_text }}
            </a>
          </div>
        {% endif %}
      {% else %}
        <div class="ai-empty-state-{{ ai_gen_id }}">
          <h3>No products found</h3>
          <p>This collection doesn't contain any products yet.</p>
        </div>
      {% endif %}
    {% else %}
      <div class="ai-empty-state-{{ ai_gen_id }}">
        <h3>Select a collection</h3>
        <p>Choose a collection to display products from your store.</p>
      </div>
    {% endif %}
  </div>
</div>

